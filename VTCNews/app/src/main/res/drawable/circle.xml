<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Mau ná»n solid -->
    <solid
        android:color="@color/white">
    </solid>
    <!-- vien stroke -->
    <stroke
        android:color="@color/black"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!--thuoc tinh can chinh padding -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
    </padding>

    <!-- can 4 goc corners radius-->
    <corners android:radius="20dp" />
</shape>