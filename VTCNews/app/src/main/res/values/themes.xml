<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.VTCNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_noti_bar</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="actionBarSize">40dp</item>
    </style>

    <style name="MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_noti_bar</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.VTCNews">
        <item name="tint">@color/white</item>
    </style>

    <!-- tab layout audio -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">#a3161d</item>
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


</resources>